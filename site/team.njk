<main id="main" class="main flex flex-1 h-full flex-col focus:outline-none" tabindex="-1">
    <div class="absolute l-0 r-0 h-20 lg:h-24 w-full bg-blue-800"></div>
    <ul class="flex flex-wrap mx-auto justify-center pt-8 md:pt-16 lg:pt-20 z-10 px-8">
        {% for teamMember in data.team.records %}
            <li class="-mx-1">
                <div class="flex justify-center items-center pt-6">
                    <div class="bg-cover bg-top pb-12 w-12 rounded-full shadow-2xl -mt-8" style="background-image: url('/images/team/{{ teamMember.fields["Name"] | slug }}.png')"></div>
                </div>
            </li>
        {% endfor %}
    </ul>
    <div class="container md:w-4/5 mx-auto justify-center text-center px-4 py-6 md:py-16">
